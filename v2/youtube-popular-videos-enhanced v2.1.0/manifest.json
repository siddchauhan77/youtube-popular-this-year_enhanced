{
  "manifest_version": 3,
  "name": "YouTube Popular Videos Filter",
  "version": "2.1.0",
  "description": "Filter YouTube channel videos by time period (7 days, 3 months, 6 months, 1 year) and sort by popularity.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content-script.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
